{
  "family": "fullstack-ai-chat",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "backend",
      "image": "ACCOUNT_ID.dkr.ecr.ap-south-1.amazonaws.com/fullstack-ai-chat-backend:latest",
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        { "name": "MONGODB_URI", "value": "MONGODB_ATLAS_URI" },
        { "name": "REDIS_URL", "value": "ELASTICACHE_REDIS_URL" },
        { "name": "CORS_ORIGINS", "value": "[\"https://yourdomain.com\"]" }
      ],
      "secrets": [
        {
          "name": "OPENAI_API_KEY",
          "valueFrom": "arn:aws:ssm:ap-south-1:ACCOUNT_ID:parameter/fullstack-ai-chat/openai-api-key"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/fullstack-ai-chat-backend",
          "awslogs-region": "ap-south-1",
          "awslogs-stream-prefix": "backend"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:8000/health || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 10
      },
      "essential": true
    },
    {
      "name": "frontend",
      "image": "ACCOUNT_ID.dkr.ecr.ap-south-1.amazonaws.com/fullstack-ai-chat-frontend:latest",
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        { "name": "NEXT_PUBLIC_API_URL", "value": "https://api.yourdomain.com" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/fullstack-ai-chat-frontend",
          "awslogs-region": "ap-south-1",
          "awslogs-stream-prefix": "frontend"
        }
      },
      "essential": true
    }
  ]
}
